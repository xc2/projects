{
  "scripts": {
    "prepare": "bazel run //tools/lint:husky install || true"
  },
  "dependencies": {
    "eslint": "^8.45.0",
    "prettier": "^3.0.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "bazel run -- //:prettier --write"
    ],
    "*.{json,prettierrc,swcrc,eslintrc}": [
      "bazel run -- //:prettier --write"
    ]
  }
}
